{% extends  'base.html.twig' %}

{% block title %}Toutes les saisons de {{ slug}} {% endblock %}

{% block body %}
    <h1>Toutes les saisons de la série : {{ slug }}</h1>
    {%  for season in seasons %}
        <div>
            <a href="{{ path('wild') }}"><h2>Saison {{ season.number }} - Année : {{ season.year }}  </h2> </a>
            <p>Description : {{season.description}}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>

    <a href="{{ path('wild_show', { 'slug': "walking-dead"}) }}">
        Testing show() method from WildController with a real program s slug.
    </a>
    <br>
    <a href="{{ path('wild_index') }}">
        Testing index() method from WildController to view all programs.
    </a>
    <br>
    <a href="{{ path('wild_show_category',{'categoryName': "Horreur"}) }}">
        Testing showByCategory() method from WildController to view the last 3 programs of a category.
    </a>

{% endblock %}

