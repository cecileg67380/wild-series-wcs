{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ actor.slug }}</td>
            </tr>
            <tr>
                <th>Program</th>
                    <td>
                        <ul>
                            {% for program in actor.programs %}
                                <a href="{{ path('program_show',{'slug':program.slug}) }}"><li>{{ program.title }}</li></a>
                            {% endfor %}
                        </ul>
                    </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('actor_index') }}">back to list</a>
<br>
    <a href="{{ path('actor_edit', {'slug': actor.slug}) }}">edit</a>
<br>
    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
